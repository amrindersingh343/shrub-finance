{
  "name": "@shrub/contracts",
  "version": "1.0.0",
  "description": "The contracts and dev tooling for shrub.finance",
  "main": "index.js",
  "types": "./types",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "npm run compile && hardhat node",
    "compile": "npx hardhat compile && npm run typechain",
    "typechain": "npm run typechain:ethers && npm run typechain:web3",
    "typechain:ethers": "typechain --target ethers-v5 --out-dir types/ethers-v5 './abi/**/*.json'",
    "typechain:web3": "typechain --target web3-v1 --out-dir types/web3-v1 './abi/**/*.json'",
    "maker": "node scripts/order-generator.js",
    "taker": "node scripts/taker-order-generator.js",
    "deposit": "node scripts/deposit-eth.js",
    "prepare": "npm run compile",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-truffle5": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "^3.4.0",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.0.2",
    "@typechain/web3-v1": "^3.0.0",
    "@types/config": "0.0.38",
    "@types/mocha": "^8.2.2",
    "chai": "^4.3.4",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.3.1",
    "hardhat": "^2.3.3",
    "hardhat-abi-exporter": "^2.2.1",
    "hardhat-deploy": "^0.8.6",
    "hardhat-gas-reporter": "^1.0.4",
    "solidity-coverage": "^0.7.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "1.18.0",
    "typechain": "^5.0.0",
    "typescript": "^4.3.2"
  }
}
