{
  "compilerOptions": {
    "lib": ["es5", "es6", "es2017"],
    "noImplicitAny": false,
    "removeComments": true,
    "declaration": true,
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2018",
    "baseUrl": ".",
    "outDir": "ts_build",
    "sourceMap": true
  },
  "include": ["./scripts", "./test"],
  "files": ["./hardhat.config.ts"],
  "exclude": ["node_modules"]
}
