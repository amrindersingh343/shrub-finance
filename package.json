{
  "name": "shrub",
  "version": "1.0.0",
  "description": "The mono-repo for shrub.finance",
  "homepage": "https://github.com/shrub-finance/shrub#readme",
  "author": "",
  "license": "ISC",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "lerna run start --parallel",
    "contracts": "yarn workspace @shrub/contracts start",
    "app": "yarn workspace @shrub/app start",
    "backend": "yarn workspace @shrub/backend start",
    "prepare": "husky install",
    "test": "mocha"
  },
  "lint-staged": {
    "packages/backend/**/*.{ts,tsx}": [
      "tslint --fix",
      "prettier --write"
    ],
    "**/*.{js}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shrub-finance/shrub"
  },
  "bugs": {
    "url": "https://github.com/shrub-finance/shrub/issues"
  },
  "devDependencies": {
    "eslint": "^7.28.0",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "1.18.0",
    "typescript": "^4.3.4"
  }
}
